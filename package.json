{
  "name": "homebridge-llm-control",
  "version": "1.0.0",
  "description": "Homebridge plugin that adds LLM-powered monitoring, watchdog, and Telegram control.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "config.schema.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck",
    "prepare": "npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "llm",
    "openai",
    "telegram",
    "monitoring"
  ],
  "author": "Theo",
  "license": "MIT",
  "homepage": "https://github.com/theos2node/homebridge-llm-control#readme",
  "bugs": {
    "url": "https://github.com/theos2node/homebridge-llm-control/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theos2node/homebridge-llm-control.git"
  },
  "engines": {
    "node": ">=18.20.0",
    "homebridge": ">=1.8.0"
  },
  "dependencies": {
    "homebridge": "^1.8.5",
    "node-cron": "^4.2.1",
    "openai": "^5.15.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  },
  "homebridge": {
    "pluginAlias": "LLMControl",
    "pluginType": "platform",
    "singular": true
  }
}
